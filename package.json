{
  "name": "michael-casas",
  "version": "0.0.1",
  "private": true,
  "author": "Michael Casas",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@storybook/react",
      "**/@storybook/react-native",
      "**/@nestjs/*",
      "**/expo-cli",
      "**/expo"
    ]
  },
  "scripts": {
    "add:admin": "yarn workspace @michael-casas/admin add",
    "add:api": "yarn workspace @michael-casas/api add",
    "add:common": "yarn workspace @michael-casas/common add",
    "add:portfolio": "yarn workspace @michael-casas/portfolio add",
    "add:teez": "yarn workspace @michael-casas/teez add",
    "add:texas-bbq": "yarn workspace @michael-casas/texas-bbq add",
    "build:admin": "yarn workspace @michael-casas/app build",
    "build:api": "yarn workspace @michael-casas/api build",
    "build:common": "yarn workspace @michael-casas/common build",
    "build:portfolio": "yarn workspace @michael-casas/portfolio build",
    "build:teez": "yarn workspace @michael-casas/teez build",
    "build:texas-bbq": "yarn workspace @michael-casas/texas-bbq build",
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean:build": "lerna exec -- rimraf \"{.next,dist,build}\"",
    "dev:admin": "concurrently \"yarn workspace @michael-casas/admin dev\" \"yarn workspace @michael-casas/api admin\"",
    "dev:app": "yarn workspace @michael-casas/app start",
    "dev:api": "yarn workspace @michael-casas/api start:dev",
    "gen:api": "yarn workspace @michael-casas/api nest g",
    "rm:admin": "yarn workspace @michael-casas/admin remove",
    "rm:api": "yarn workspace @michael-casas/api remove",
    "rm:common": "yarn workspace @michael-casas/common remove",
    "rm:portfolio": "yarn workspace @michael-casas/portfolio remove",
    "rm:teez": "yarn workspace @michael-casas/teez remove",
    "rm:texas-bbq": "yarn workspace @michael-casas/texas-bbq remove",
    "sb:app": "yarn workspace @michael-casas/app storybook",
    "serve:admin": "lerna run --parallel serve"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  }
}
